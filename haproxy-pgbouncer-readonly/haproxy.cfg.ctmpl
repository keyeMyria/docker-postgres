listen pgbouncer-readonly
    mode tcp
    bind *:{{or (env "PGBOUNCER_READONLY_PORT") "6899"}}
    timeout connect 10s
    timeout client 1m
    timeout server 1m
    option pgsql-check user ha
    balance roundrobin
    {{- range service "pgbouncer-master"}}
    server {{.Node}} {{.Address}}:{{.Port}} check backup
    {{- end}}
    {{- range service "pgbouncer-slave"}}
    server {{.Node}} {{.Address}}:{{.Port}} check
    {{- end}}
